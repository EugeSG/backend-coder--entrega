<div class="products">
    {{#if products.length}}
        {{#each products}}
            <div class="product">
                <div class="title">
                    Título: {{title}}
                </div>
                <div>
                    Descripción: {{description}}
                </div>
                <div>
                    Precio: {{price}}
                </div>
                <div>
                    Código: {{code}}
                </div>
                <div>
                    Stock: {{stock}}
                </div>
                <div>
                    Categorìa: {{category}}
                </div>
            </div>
        {{/each}}
    {{else}}
        <div>Aún no hay productos</div>
    {{/if}}
</div>